[Unit]
Description=Pretix background worker
After=network.target

[Service]
User=__APP__
Group=__APP__
Environment="PRETIX_CONFIG_FILE=__INSTALL_DIR__/pretix.cfg"
Environment="VIRTUAL_ENV=__INSTALL_DIR__/venv"
Environment="PATH=__INSTALL_DIR__/venv/bin:$PATH"
ExecStart=__INSTALL_DIR__/venv/bin/celery -A pretix.celery_app worker -l info
WorkingDirectory=__INSTALL_DIR__/
Restart=on-failure

[Install]
WantedBy=multi-user.target